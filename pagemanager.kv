
# PageManager:
#     LoginForm:

#     RegForm:

#     Homepage:


<Homepage>:
    name: "homepage"
    rv: rv # expose the widget

    TabbedPanel:
        size_hint: 1, 0.9
        pos_hint: {'x': 0, 'top':0.9}
        tab_width: root.width / 3
        do_default_tab: False
        TabbedPanelItem:
            text: "Account Info"
            FloatLayout:
                Button:
                    text: "Cancel Membership (Debug)"
                    font_size: (root.width**2 + root.height**2) / 15**4
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    size_hint: 0.35, 0.1
        TabbedPanelItem:
            text: "See Classes"
            Label:
                text: "First tab"
            BoxLayout:
                RecycleView:
                    id: rv
                    viewclass: 'Label'
                    RecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
        TabbedPanelItem:
            text: "See Equipment Status"
            Label:
                text: "Second tab"

    Button:
        text: "Go Back"
        font_size: (root.width**2 + root.height**2) / 14**4
        pos_hint: {"x":0,"top":1}
        size_hint: 0.15, 0.1
        on_release: 
            app.root.current = "login"
            root.manager.transition.direction = "up"


<LoginForm>:
    name: "login"

    email: email
    passw: passw

    FloatLayout:

        Label:
            text: "Placeholder Logo"
            font_size: (root.width**2 + root.height**2) / 12**4
            font_name: "Arialbd"
            pos_hint: {"x":0.2,"y":0.8}
            size_hint: 0.6, 0.1

        Label:
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.7}
            size_hint: 0.35, 0.15
        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.6725}
            size_hint: 0.35,0.08
            multiline: False

        Label:
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.6}
            size_hint: 0.35, 0.15
        TextInput:
            id: passw
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.5725}
            size_hint: 0.35,0.08
            multiline: False
            password: True

        Button:
            text: "Create an Account"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.2,"y":0.3}
            size_hint: 0.6, 0.1
            on_release: 
                app.root.current = "registration"
                root.manager.transition.direction = "left"

        Button:
            text: "Login"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            on_release: 
                app.root.current = "homepage"
                root.manager.transition.direction = "down"
                root.submit()


<RegForm>:
    name: "registration"

    fname: fname
    lname: lname
    email: email
    addr: addr
    phone: phone
    ssn: ssn
    passw: passw

    FloatLayout:
        Label:
            text: "Account Registration"
            font_size: (root.width**2 + root.height**2) / 13.5**4
            font_name: "Arialbd"
            pos_hint: {"x":0.35,"top":1}
            size_hint: 0.25, 0.15

        Label:
            text: "First Name: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.9}
            size_hint: 0.35, 0.15
        TextInput:
            id: fname
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.8725}
            size_hint: 0.35,0.08
            multiline: False

        Label:
            text: "Last Name: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.8}
            size_hint: 0.35, 0.15
        TextInput:
            id: lname
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.7725}
            size_hint: 0.35,0.08
            multiline: False

        Label:
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.7}
            size_hint: 0.35, 0.15
        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.6725}
            size_hint: 0.35,0.08
            multiline: False

        Label:
            text: "Address: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.6}
            size_hint: 0.35, 0.15
        TextInput:
            id: addr
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.5725}
            size_hint: 0.35,0.08
            multiline: False

        Label:
            text: "Phone Number: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.5}
            size_hint: 0.35, 0.15
        TextInput:
            id: phone
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.4725}
            size_hint: 0.35,0.08
            multiline: False
            input_filter: "int"
            on_text:
                if len(self.text) >= 10: self.text = self.text[0:10]

        Label:
            text: "SSN: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0.1,"top":0.4}
            size_hint: 0.35, 0.15
        TextInput:
            id: ssn
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.3725}
            size_hint: 0.35,0.08
            multiline: False
            input_filter: "int"
            on_text:
                if len(self.text) >= 9: self.text = self.text[0:8]

        Label:
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.1, "top":0.3}
            size_hint: 0.35,0.15 

        TextInput:
            id: passw  
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x": 0.45, "top":0.2725}
            size_hint: 0.35,0.08
            multiline: False
            password: True


        Button:
            text: "Go Back"
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint: {"x":0,"top":1}
            size_hint: 0.15, 0.1
            on_release: 
                app.root.current = "login"
                root.manager.transition.direction = "right"

        Button:
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.2,"y":0.05}
            size_hint: 0.6, 0.1
            on_release: 
                root.submit()
                app.root.current = "login"
                root.manager.transition.direction = "right" 